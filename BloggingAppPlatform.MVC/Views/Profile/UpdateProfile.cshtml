@model BloggingAppPlatform.MVC.ViewModels.UpdateUserVm
<h4>Update Post</h4>
<div class="row">
    <form asp-action="UpdateProfile" asp-controller="Profile" asp-area="" method="post">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }

        <input type="hidden" asp-for="@Model.User.Id" name="Id" value="@Model.User.Id" />
        <div class="form-group">
            <input type="text" asp-for="@Model.User.Username" placeholder="Username" name="Username" class="form-control" />
            <span asp-validation-for="@Model.User.Username" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <textarea class="form-control" asp-for="@Model.User.Firstname" name="Firstname" placeholder="Post" rows="3"></textarea>
            <span asp-validation-for="@Model.User.Firstname" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <textarea class="form-control" asp-for="@Model.User.Lastname" name="Lastname" placeholder="Post" rows="3"></textarea>
            <span asp-validation-for="@Model.User.Lastname" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <textarea class="form-control" asp-for="@Model.User.Email" name="Email" placeholder="Post" rows="3"></textarea>
            <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-dark">Update</button>
        </div>
    </form>
</div>
<hr />