@model Entities.DTOs.LoginDto
@{
    Layout = "_Layout"; // Ensure the layout is set
    ViewData["HideLayoutSections"] = true; // Indicate that layout sections should be hidden
}

<h1>Login</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-8 col-md-6">
            <form class="form mt-5" method="post" asp-action="Login" asp-controller="Auth">
                @* Display error message *@
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }

                <div class="form-group">
                    <label asp-for="Username" class="text-dark">Username:</label><br>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                
                <div class="form-group mt-3">
                    <label asp-for="Password" class="text-dark">Password:</label><br>
                    <input asp-for="Password" type="password" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-dark btn-md" value="Login" />
                </div>

                <div class="text-right mt-2">
                    <a asp-action="Register" asp-controller="Auth" class="text-dark">Register here</a>
                </div>
            </form>
        </div>
    </div>
</div>
