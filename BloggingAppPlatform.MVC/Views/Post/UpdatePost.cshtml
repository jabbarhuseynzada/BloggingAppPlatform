@model BloggingAppPlatform.MVC.ViewModels.UpdatePostVm


<h4>Update Post</h4>
<div class="row">
    <form asp-action="UpdatePost" asp-controller="Post" asp-area="" method="post">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }

        <input type="hidden" asp-for="@Model.postDto.PostId" name="PostId" value="@Model.postDto.PostId"/> 
        <div class="form-group">
            <input type="text" asp-for="@Model.postDto.Title" placeholder="Post Title" name="Title" class="form-control" />
            <span asp-validation-for="@Model.postDto.Title" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <textarea class="form-control" asp-for="@Model.postDto.Context" name="Context" id="idea" placeholder="Post" rows="3"></textarea>
            <span asp-validation-for="@Model.postDto.Context" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-dark">Update</button>
        </div>
    </form>
</div>
<hr />

