@model Entities.DTOs.AddPostDto


    <h4>Share your ideas</h4>
    <div class="row">
        <form asp-action="AddPost" asp-controller="Post" method="post">
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }
            <div class="form-group">
                <input type="text" asp-for="Title" placeholder="Post Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <textarea class="form-control" asp-for="Context" id="idea" placeholder="Post" rows="3"></textarea>
                <span asp-validation-for="Context" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-dark">Share</button>
            </div>
        </form>
    </div>
    <hr />

